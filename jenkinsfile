pipeline {
    agent any

    environment {
        NODEJS_HOME = tool 'npm' // Use the name of the NodeJS installation tool
        PATH = "$NODEJS_HOME/bin:$PATH"
    }

    stages {
        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Tool Install') {
            steps {
                // Example of installing tools if needed
                tool name: 'npm', type: 'NodeJSInstallation'
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
                script {
                    def jsonContent = readFile('package.json')
                    def jsonMap = new groovy.json.JsonSlurper().parseText(jsonContent)
                    def serializableMap = [:]
                    serializableMap.putAll(jsonMap)
                    
                    echo "Package name: ${serializableMap.name}"
                }
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }

    post {
        always {
             node(null){
                cleanWs(deleteDirs: true, disableDeferredWipeout: true)
            }
        }
    }
}
