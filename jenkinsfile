pipeline {
    agent any

    stages {
        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Tool Install') {
            steps {
                // Example of installing tools if needed
                tool name: 'NodeJS', type: 'NodeJSInstallation'
            }
        }

        stage('Checkout') {
            steps {
                checkout scm
                script {
                    def jsonContent = readFile('package.json')
                    def jsonMap = new groovy.json.JsonSlurper().parseText(jsonContent)
                    def serializableMap = [:]
                    serializableMap.putAll(jsonMap)
                    
                    echo "Package name: ${serializableMap.name}"
                }
            }
        }

        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
            }
        }

        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
